{% extends 'loggedtemplate.html.twig' %}

{% block title %}
    <title>Expertise.com: List of users</title>
{% endblock %}

{% block breadcrumb %}
    <div class="bread-crumb">
        <span>Expertise.com Marketing Mgmt</span>
        <i class="fa fa-long-arrow-right"></i>
        <span>My Preferences</span>

    </div>
{% endblock %}

{% block body %}

    <div class="my-preferences-outer">
        <div class="my-preferences">
            <div class="pref-header">
                <h4>My Preferences</h4>
            </div>
            <div class="my-pref-body">
                <ul>
                    <li>
                        <label>First Name</label>
                        <div class="field-wrap">
                            <input type="text" name="first-name" placeholder="First Name"/>
                        </div>
                    </li>
                    <li>
                        <label>Last Name</label>
                        <div class="field-wrap">
                            <input type="text" name="last-name" placeholder="Last Name"/>
                        </div>
                    </li>
                    <li>
                        <label>Email</label>
                        <div class="field-wrap">
                            <input type="email" name="email" placeholder="email" readonly  value="tejaswi@intelligent.com" />
                        </div>
                    </li>
                    <li>
                        <label>Company</label>
                        <div class="field-wrap">
                            <em>Unknown</em>
                        </div>
                    </li>
                    <li>
                        <label>Password</label>
                        <div class="field-wrap">
                            <a href="#">Change Password...</a>
                        </div>
                    </li>
                    <li>
                        <label>&nbsp;</label>
                        <div class="field-wrap">
                            <input type="submit" name="submit" value="Submit"/>
                        </div>
                    </li>
                </ul>
            </div>
        </div>    
    </div>
{% endblock %}