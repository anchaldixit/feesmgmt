{% extends 'truebase.html.twig' %}

{% block title %}
    <title>Expertise.com: List of users</title>
{% endblock %}

{% block breadcrumb %}
    <div class="bread-crumb">
        <span>Expertise.com Marketing Mgmt</span>
        <i class="fa fa-long-arrow-right"></i>
        <span>Registration</span>

    </div>
{% endblock %}

{% block body %}

    <div class="my-preferences-outer" style="min-height: 560px;">
        <div class="my-preferences">
            <div class="pref-header">
                <h4>Register Here</h4>
            </div>
            <div class="my-pref-body" id="mypreferences">
                <ul>
                    <li>
                        <label>Name</label>
                        <div class="field-wrap">
                            <input id="full_name_text" type="text" name="name" placeholder="Name" value="{{ app.user.getName() }}"/>
                            <span class="validation_msg"></span>
                        </div>
                    </li>
                    
                    <li>
                        <label>Email</label>
                        <div class="field-wrap">
                            <input type="email" name="email" placeholder="email" readonly  value="{{ app.user.getEmail() }}" />
                        </div>
                    </li>
                    <li>
                        <label>Password</label>
                        <div class="field-wrap">
                            <input type="password" name="password"  id="password" value="" />
                        </div>
                    </li>
                    <li>
                        <label>Retype Password</label>
                        <div class="field-wrap">
                            <input type="password" name="re_password"  id="re_password" value="" />
                        </div>
                    </li>
                    
                    <li>
                        <label>Role</label>
                        <div class="field-wrap">
                            <em>{{ app.user.getRole().getName() }}</em>
                        </div>
                    </li>
                    
                    <li>
                        <label>&nbsp;</label>
                        <div class="field-wrap">
                            <input type="submit" name="submit" value="Register" id="user_register" />
                            <p id="loader" style="display:none; text-align: right"><i class="fa fa-refresh fa-spin fa-1x fa-fw"></i></p>
                        </div>
                    </li>
                </ul>
                <p id="valid_error"></p>
            </div>
        </div>    
    </div>
{% endblock %}