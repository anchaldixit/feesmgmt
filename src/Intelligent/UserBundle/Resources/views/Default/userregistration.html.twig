{% extends 'truebase.html.twig' %}

{% block title %}
    <title>Expertise.com: List of users</title>
{% endblock %}

{% block breadcrumb %}
    <div class="bread-crumb">
        <span>Expertise.com Marketing Mgmt</span>
        <i class="fa fa-long-arrow-right"></i>
        <span>Registration</span>

    </div>
{% endblock %}

{% block body %}
    <div class="my-preferences-outer" style="min-height: 560px;">
        {% if status == false %}
            <div class="access-msg"><p>This link is not valid</p></div>
        {% elseif status == 1 or status == 6%}
            <div class="access-msg"><p>You are already registered. <a href='{{path('login')}}'>Click here</a> to login</p></div>
        {% elseif status == 2 or status == 3 %}
        <div class="my-preferences">
            <div class="pref-header">
                {% if status == 3 %}
                    <h4>You are verified. Now register here</h4>
                {% else %}
                    <h4>Register here</h4>
                {% endif %}
            </div>
            <div class="my-pref-body" id="registration">
                <ul>
                    <li>
                        <label>Name</label>
                        <div class="field-wrap">
                            <input id="full_name_text" type="text" name="name" placeholder="Name" value=""/>
                            <span class="validation_msg"></span>
                        </div>
                    </li>
                    
                    <li>
                        <label>Email</label>
                        <div class="field-wrap">
                            <input type="email" name="email" placeholder="email" readonly  value="{{email}}" />
                        </div>
                    </li>
                    <li>
                        <label>Password</label>
                        <div class="field-wrap">
                            <input type="password" name="password"  id="password" value="" />
                            <span class="validation_msg"></span>
                        </div>
                    </li>
                    <li>
                        <label>Retype Password</label>
                        <div class="field-wrap">
                            <input type="password" name="re_password"  id="re_password" value="" />
                            <span class="validation_msg"></span>
                        </div>
                    </li>
                    
                    <li>
                        <label>Role</label>
                        <div class="field-wrap">
                            <em>{{role}}</em>
                        </div>
                    </li>
                    
                    <li>
                        <label>&nbsp;</label>
                        <div class="field-wrap">
                            <input type="submit" name="submit" value="Register" id="user_register" />
                            <p id="loader" style="display:none; text-align: right"><i class="fa fa-refresh fa-spin fa-1x fa-fw"></i></p>
                        </div>
                    </li>
                </ul>
                <p id="valid_error"></p>
            </div>
        </div>
        {% elseif status == 4 or status == 5 %}
            <div class="access-msg"><p>You account is deactivated. Please contact admin</p></div>
        {% endif %}
    </div>
{% endblock %}
{% block inlinejs %}
    {{parent()}}
    <script> var emailVerifyId = '{{emailVerifyId}}'</script>
{% endblock %}
    