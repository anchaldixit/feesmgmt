{% extends 'loggedtemplate.html.twig' %}

{% block title %}
    <title>Expertise.com: List of users</title>
{% endblock %}

{% block breadcrumb %}
    <div class="bread-crumb">
        <span>Expertise.com Marketing Mgmt</span>
        <i class="fa fa-long-arrow-right"></i>
        <span>Manage Users</span>
        
    </div>
{% endblock %}

{% block body %}
    
    <div class="content-table">
    <div class="left-sidebar">
                <div class="filter-box">
                    <h6><a href="#"><i class="fa fa-caret-down"></i>Access</a></h6>
                    <ul>
                        <li><input type="checkbox"><label>App Access</label></li>
                        <li><input type="checkbox"><label>No Access</label></li>
                    </ul>
                </div>
                
                <div class="filter-box">
                    <h6><a href="#"><i class="fa fa-caret-down"></i>Role</a></h6>
                    <ul>
                        <li><input type="checkbox"><label>None</label></li>
                        <li><input type="checkbox"><label>Administrator</label></li>
                        <li><input type="checkbox"><label>Team Member</label></li>
                        <li><input type="checkbox"><label>Sales Agent</label></li>
                        <li><input type="checkbox"><label>Client</label></li>
                        <li><input type="checkbox"><label>TSD</label></li>
                        <li><input type="checkbox"><label>Expertise</label></li>
                    </ul>
                </div>
                <div class="filter-box">
                    <h6><a href="#"><i class="fa fa-caret-down"></i>Status</a></h6>
                    <ul>
                        <li><input type="checkbox"><label>Registered</label></li>
                        <li><input type="checkbox"><label>Unregistered</label></li>
                        <li><input type="checkbox"><label>Unverified</label></li>
                        <li><input type="checkbox"><label>Verified</label></li>
                        <li><input type="checkbox"><label>Deactivated</label></li>
                        <li><input type="checkbox"><label>Denied</label></li>
                        
                    </ul>
                </div>
            </div>
    <div class="table-content user-table">
        <div class="user-filter">
        <div class="search-box">
            <div class="search">
                <input type="text" name="role-search" placeholder="Search User">
                <i class="fa fa-search"></i>
            </div>
        </div>
        <div class="display-result">
            <p>Displaying <span class="curr-result"> 26 </span> out of <span class="total-result">50</span> Roles</p>
        </div>
    </div>
                <table id="userList" style="display:none;">
                    <thead>
                        <tr>
                            
                            <th>Name</th>
                            <th>Role</th>
                            <th>Status</th>
                            <th>Last Visit</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
    </div>
{% endblock %}