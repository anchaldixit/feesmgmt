{% extends 'loggedtemplate.html.twig' %}

{% block title %}
    <title>Expertise.com: List of users</title>
{% endblock %}

{% block breadcrumb %}
    <div class="bread-crumb">
        <span>Expertise.com Marketing Mgmt</span>
        <i class="fa fa-long-arrow-right"></i>
        <span>My Preferences</span>

    </div>
{% endblock %}

{% block body %}

    <div class="my-preferences-outer">
        <div class="my-preferences">
            <div class="pref-header">
                <h4>Change Password</h4>
            </div>
            <div class="my-pref-body" id="change_password">
                <ul>
                    <li>
                        <label>Old Password</label>
                        <div class="field-wrap">
                            <input type="password" name="old_password" id="old_password" />
                            <span class="validation_msg"></span>
                        </div>
                    </li>
                    <li>
                        <label>New Password</label>
                        <div class="field-wrap">
                            <input type="password" name="new_password" id="new_password" />
                        </div>
                    </li>
                    <li>
                        <label>Retype New Password</label>
                        <div class="field-wrap">
                            <input type="password" name="re_new_password" id="re_new_password" />
                            <span class="validation_msg2"></span>
                        </div>
                    </li>
                    <li>
                        <label>&nbsp;</label>
                        <div class="field-wrap">
                            <input type="submit" name="submit" value="Submit" id="change_password_btn"/>
                        </div>
                    </li>
                </ul>
                <p id="valid_error"></p>
            </div>
        </div>    
    </div>
{% endblock %}